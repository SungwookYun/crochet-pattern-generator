{
  "name": "crochet-pattern-generator",
  "version": "1.0.0",
  "description": "A web application that generates crochet patterns from photos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run start\" \"npm run client\"",
    "build": "npm run install-client && cd client && CI=false npm run build",
    "install-client": "cd client && npm install --legacy-peer-deps --no-audit",
    "heroku-postbuild": "npm run install-client && npm run build",
    "vercel-build": "npm run install-client && cd client && CI=false npm run build",
    "railway-build": "npm run install-client && cd client && CI=false npm run build",
    "clean": "rm -rf node_modules client/node_modules client/build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
